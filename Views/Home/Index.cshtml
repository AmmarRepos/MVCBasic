@model PeopleViewModel

@{
    ViewData["Title"] = "Home";
}

<form method="post" action="@Url.ActionLink("Index", "Home")">
    <div class="search-form">
        <input type="submit" value="Search">
        <input type="text" name="filterWord" placeholder="Search">
    </div>
</form>


<div class="text-left">
    <form method="post" action="@Url.ActionLink("Create", "Home")">
        <input type="submit" value="Add">
        <input type="text" name="Name" placeholder="Name">
        <input type="text" name="PhoneNumber" placeholder="Phone">
        <input type="text" name="City" placeholder="City">
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Phone number
            </th>
            <th>
		city
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.tempPeople)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.PhoneNumber
                </td>
                <td>
                    @item.City
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Home" asp-route-id=@item.Id >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
